<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitals"
        android:textSize="56sp"
        android:textColor="#000"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/heart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/temperature"
        android:layout_marginStart="77dp"
        android:src="@drawable/redheart" />

    <TextView
        android:id="@+id/heartcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="49dp"
        android:text="Heart"
        android:textColor="#000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/temperature"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="67dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/temp" />

    <TextView
        android:id="@+id/Temperaturecount"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/heartcount"
        android:layout_marginEnd="15dp"
        android:text="Temperature"
        android:textColor="#000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/blood"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="114dp"
        android:src="@drawable/bp2" />

    <TextView
        android:id="@+id/bloodp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="pressure"
        android:textColor="#000"
        android:textSize="40sp" />





</RelativeLayout>