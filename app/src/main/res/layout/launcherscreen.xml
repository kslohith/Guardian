<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003366"
    tools:context=".launcherscreen">

    <ImageView
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:id="@+id/driver"
        android:src="@drawable/people"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/patient"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="21dp"
        android:src="@drawable/person" />

    <TextView
        android:id="@+id/signindoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/doctor"
        android:layout_marginBottom="140dp"
        android:fontFamily="casual"
        android:text="Sign in as Driver"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/signinpatient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/patient"
        android:layout_alignTop="@+id/signindoc"
        android:fontFamily="casual"
        android:text="Sign in as Patient"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>